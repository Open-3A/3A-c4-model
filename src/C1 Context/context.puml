@startuml
!include https://raw.githubusercontent.com/adrianvlupu/C4-PlantUML/latest/C4_Context.puml

LAYOUT_WITH_LEGEND()

Person(user, "Usuário", "Pessoa física interagindo com o aplicativo móvel da 3A")

System_Boundary(3a, "Asset Analysis AI (3A)"){
  System(mobile, "Front-end mobile", "Aplicativo móvel onde o usuário irá usufruir das funcionalidades do sistema")
  System(backend, "Back-end", "Servidor responsável por prover as funcionalidades e armazena todas as regras de negócio do sistema")
  System(ai, "Inteligência Artificial", "Modelo similar com o GPT-3.5 para elaborar os relatórios de investimentos")
}

System_Ext(mail, "Sistema de e-mail", "SMTP do Gmail")

Rel(user, mobile, "Interage via aplicativo móvel")

Rel(mobile, backend, "Envio de dados de cadastro ou login", "JSON/HTTPS")
Rel(backend, mobile, "Envio dos dados para a contrução da interface", "JSON/HTTPS")

Rel(backend, mail, "Envia e-mail de confirmação ao usuário")

Rel(backend, ai, "Solicita a criação de um novo relatório de investimento", "JSON/HTTPS")
Rel(ai, backend, "Envia o relatório", "JSON/HTTPS")

@enduml
